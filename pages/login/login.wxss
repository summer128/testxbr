.header {
    margin: 240rpx 0 90rpx 175rpx;
    text-align: center;
    width: 400rpx;
    height: 400rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 100%;
    height: 100%;
    border-radius: 30rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}