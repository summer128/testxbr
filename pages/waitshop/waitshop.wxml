<view class="background">
<view class="my_order">
  <view wx:for="{{list}}" wx:key="index" class="boxx">
    <view class="fl {{index==ishidden?'active1':''}}" bindtap="chancolor" data-myindex="{{index}}">
    {{item}}
    </view>
  </view>
</view>
<view wx:if="{{ishidden==0}}">
    <view class="waitbox2" wx:if="{{orderList[0].length==0}}">
      <image src="https://pic.shanyide.cn/wx_waitpaynull.png"></image>
      <view>暂无订单</view>
    </view>
    <block wx:for="{{orderList[0]}}" wx:key="index" wx:if="{{ishidden==0}}">
        <view class="box_list" data-info="{{item}}">
            <view class="list_one">
              <view class="one_name">订单编号：{{item.orderInfo.orderNumber}}</view>
              <view class="one_zt">待付款</view>
            </view>
            <view class="list_two" bindtap="tzz" data-info="{{item}}">
              <view class="content_l">
                <image src="{{item.goodsPictureList[0]}}"></image>
              </view>
              <view class="content_c">{{item.goodsInfo.name}}</view>
              <view class="content_r">共1件</view>
            </view>
            <view class="list_three">
              <view class="pay_prices">合计:￥{{item.orderInfo.totalPrice}}</view>
              <view class="look1" bindtap="closeorder" data-id="{{item}}">取消订单</view>
              <view class="sure" bindtap="now_pay" data-msg="{{item}}">立即支付</view>
            </view>
        </view>
    </block>
</view>
<view wx:if="{{ishidden==1}}">
    <view class="waitbox2" wx:if="{{orderList[1].length==0}}">
      <image src="https://pic.shanyide.cn/wx_waitpaynull.png"></image>
