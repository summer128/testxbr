            </view>
            <view class="list_two" bindtap="tzzz" data-info="{{item}}">
              <view class="content_l">
                <image src="{{item.goodsPictureList[0]}}"></image>
              </view>
              <view class="content_c">{{item.goodsInfo.name}}</view>
              <view class="content_r">共1件</view>
            </view>
            <view class="list_three">
              <view class="look">￥{{item.orderInfo.payPrice}}</view>
            </view>
        </view>
    </block>
</view>
<view wx:if="{{ishidden==2}}">
    <view class="waitbox2" wx:if="{{orderList[2].length==0}}">
        <image src="https://pic.shanyide.cn/wx_waitpaynull.png"></image>
        <view>暂无订单</view>
    </view>
    <block wx:for="{{orderList[2]}}" wx:key="index" wx:if="{{ishidden==2}}">
        <view class="box_list">
            <view class="list_one">
              <view class="one_name">订单编号：{{item.orderInfo.orderNumber}}</view>
              <view class="one_zt">待收货</view>
            </view>
            <view class="list_two" bindtap="tzzzz" data-info="{{item}}">
              <view class="content_l">
                <image src="{{item.goodsPictureList[0]}}"></image>
              </view>
              <view class="content_c">{{item.goodsInfo.name}}</view>
              <view class="content_r">共1件</view>
            </view>
            <view class="list_three">
              <view class="look1" bindtap="kanwuliu" data-info="{{item}}">查看物流</view>
              <view class="sure" bindtap="shouhuo" data-info="{{item}}">确认收货</view>
            </view>
        </view>
    </block>
</view>
<view wx:if="{{ishidden==3}}">
    <view class="waitbox2" wx:if="{{orderList[3].length==0}}">
      <image src="https://pic.shanyide.cn/wx_waitpaynull.png"></image>
      <view>暂无订单</view>
    </view>
    <block wx:for="{{orderList[3]}}" wx:key="index" wx:if="{{ishidden==3}}">
        <view class="box_list" bindtap="tzzzzz" data-info="{{item}}">
            <view class="list_one">
              <view class="one_name">订单编号：{{item.orderInfo.orderNumber}}</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===0}}">待付款</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===1}}">已付款</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===2}}">退款中</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===3}}">售后中</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===4}}">退款完成</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===5}}">已发货</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===6}}">已取消</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===7}}">已收货</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===8}}">超时</view>
              <view class="one_zt" wx:if="{{item.orderInfo.status===9}}">已完成</view>
            </view>
            <view class="list_two">
              <view class="content_l">
                <image src="{{item.goodsPictureList[0]}}"></image>
              </view>
              <view class="content_c">{{item.goodsInfo.name}}</view>
              <view class="content_r">共1件</view>
            </view>
            <view class="list_three">
              
              <view class="look">总价:{{item.orderInfo.payPrice}}</view>
            </view>
        </view>
    </block>
</view>
 
