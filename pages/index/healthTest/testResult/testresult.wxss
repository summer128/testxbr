.result_container{
  padding: 20rpx;
}

.result{
  width: 100%;
  height:450rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 0rpx 60rpx 0rpx rgba(125,125,125,0.12);
  border-radius:20rpx;
  position: relative;
}
.result_head{
  width: 100%;
  overflow: hidden;
}
.result_text{
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#333333;
  float: left;
  padding-left: 20rpx;
  line-height: 80rpx;
}
.result_describe{
  padding: 16rpx 55rpx 105rpx 68rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.result_refer{
  width:230rpx;
  height:60rpx;
  background:rgba(143,177,222,1);
  background: rgba(0,0,0,0.14);
  border-radius:30rpx 0rpx 0rpx 30rpx;
  position: absolute;
  right: 0;
  bottom: 25rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#666666;
  line-height:60rpx;
  text-align: center;
}
.qrcode_box{
  width: 100%;
  height: 400rpx;
  /* background: salmon; */
  text-align: center;
  position: relative;
}
.qrcode_img{
  width: 220rpx;
  height: 220rpx;
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
}
.qrcode_img image{
  width: 100%;
  height: 100%;
}
.attention{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#666666;
  line-height:40rpx;
  position: absolute;
  left: 50%;
  bottom:8%;
  transform: translate(-50%,0);
}
.share{
  
  height: 80rpx;
  background:linear-gradient(-90deg,rgba(126,210,19,1),rgba(111,222,38,1));
  box-shadow:0px 5px 18px 0px rgba(112,222,38,0.26);
  border-radius:40rpx;
  text-align: center;
  /* line-height: 80rpx; */
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin: 100rpx 125rpx;
}