      </view>
      <view class="modal-dialog" wx:if="{{showModal}}">
        <view class="modal-title">联系我们</view>
        <view class="wx">微信:KMSC925</view>
        <view class="phone">电话:010-67870921</view>
        <view class="emil">邮箱:shanyide@shanyide.cn</view>
        <view class="true" bindtap="onConfirm">我知道了</view>
      </view>
</view>



<!--转发弹窗-->
