</view>



<!--服务弹窗-->
<view class="hiddenmodel" wx:if="{{showModal2}}">
        <view class="modal-mask2" bindtap="hideModal2 hideModal3" catchtouchmove="preventTouchMove" wx:if="{{showModal2}}"></view>
<view class="box2" wx:if="{{showModal2}}">
    <view class="title">服务</view>
    <image src="https://pic.shanyide.cn/xiaochengxu42.png" class="close" bindtap="onConfirm3" bindtap="close3"></image>
    <view class="explain">服务说明</view>
    <view class="title1">
        <image src="https://pic.shanyide.cn/xiaochengxu44.png" class="pledge"></image>正品保证
    </view>
    <view class="title1_con">商品支持正品保障服务</view>
     <view class="title1 title2">
        <image src="https://pic.shanyide.cn/xiaochengxu46.png" class="pledge"></image>便捷物流
    </view>
    <view class="title1_con title2_con">优选物流服务，更高配送时效</view>
    <view class="title1 title3">
        <image src="https://pic.shanyide.cn/xiaochengxu45.png" class="pledge"></image>7天无理由退换
    </view>
    <view class="title3_con" id="max_box">
                                消费者在满足7天无理由退货申请条件的前提下，可以
提出“7天无理由退货”的申请
                            </view>
    <view class="ser_true" bindtap="onConfirm2">
      <view class="back1">确认</view>
    </view>
</view>
</view>



<!--规格弹窗-->
<view class="hiddenmodel" wx:if="{{showModal3}}">
    <view class="modal-mask3" bindtap="hideModal3" catchtouchmove="preventTouchMove" wx:if="{{showModal3}}"></view>
    <view class="modal-dialog" wx:if="{{showModal3}}">
        <image src="{{swiperimg[0].pictureList[0].url}}" class="pro_img"></image>
        <view class="text_tit">{{productinfo.goodsName}}</view>
        <view class="price_g">￥{{productinfo.price}}</view>
        <image src="https://pic.shanyide.cn/xiaochengxu42.png" class="close_g" bindtap="close2"></image>
        
        <view class="number">数量</view>
        <view class="btn stepper">
            <text class="_num1 sign {{num <= 1 ? 'disabled' : 'normal'}}" bindtap="delCount" data-index="{{index}}">-</text>
            <input id="number1" type="number" bindchange="bindManual" value="{{num}}"  disabled="disabled"/>
            <text class="_num2 sign {{num >= 10 ? 'disabled' : 'normal'}}" bindtap="addCount" data-index="{{index}}">+</text>
            <view class="clear"></view>
        </view>
        <view class="sure_btn" bindtap="onConfirm3">
            <view class="sure_text" bindtap="join_car">确认</view>
        </view>
    </view>
</view>




<!--地址弹窗-->
<view class="hiddenmodel" wx:if="{{showModal4}}">
      <view class="modal-mask4" bindtap="hideModal4" catchtouchmove="preventTouchMove" wx:if="{{showModal4}}"></view>
<view class="modal-dialog" wx:if="{{showModal4}}">
    <view class="distribution">配送至</view>
    <image src="https://pic.shanyide.cn/xiaochengxu42.png" class="distribution_img" bindtap="close"></image>
    <view class="back_wirp2"></view>
    <!-- <block wx:for="{{}}"></block> -->
    <view class="dz_box">
        <image src="https://pic.shanyide.cn/xiaochengxu57.png" class="my_ico"></image>
        <view class="my_con">{{dzlist.region}}{{dzlist.detail}}</view>
    </view>
    <view class="footer_distribution" bindtap="onConfirm4">
        <view class="sure_btn_sz">新增收货地址</view>
    </view> 
</view>
</view>






