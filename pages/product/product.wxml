
<view class="status-bar1" style="position: fixed;" wx:if="{{scr_show}}"></view>
<view class="headimg" bindtap="back">
    <image src="https://pic.shanyide.cn/xiaochengxu8.png"></image>
</view>

<view class="background">
   
    <view class="head_box" wx:if="{{scr_show}}">
      
        <view class="comm {{index==0?'active':''}}" bindtap='toblock1'>商品</view>
        <view class="comm {{index==1?'active':''}}" bindtap='toblock2'>评价</view>
        <view class="comm {{index==2?'active':''}}" bindtap='toblock3'>详情</view>
        <view class="comm {{index==3?'active':''}}" bindtap='toblock4'>推荐</view>
       
    </view>
    <!-- /////////////////////顶部导航结束///////////////////////// -->
    <view class="lunbo_box">
        <swiper class="lunbo" indicator-dots="true" autoplay="true" interval="2000" circular="true" indicator-active-color="#fff" indicator-color="rgba(246,129,14,1)">
        <block>
              <swiper-item wx:for="{{swiperimg[1].pictureList}}" wx:key="index">
                    <image src="{{item.url}}" class="lunbo_img"></image>
              </swiper-item>
        </block>
        </swiper>
    </view>
<!-- /////////////////轮播图结束/////////////////////////////////////// -->
    <view class="pro_con">
          <view class="price_box">
              <view class="now">￥{{productinfo.price}}</view>
              <view class="later">原价:￥{{productinfo.originPrice}}</view>
              <view class="wire"></view>
               <button open-type="share" id="shar" data-info="{{[msg.goodsInfo.id,msg]}}">
                      <image src="https://pic.shanyide.cn/xiaochengxu41.png" bindtap="shar" class="mt2 shar41" ></image>
                </button>
              
          </view>
          <view class="pro_js">{{productinfo.goodsName}}</view>
    </view>
<!-- //////////////////////////////////轮播详情结束//////////////////////////////////// -->
    <view class="transp">
        <view class="name1 name">发货</view>
        <view class="name2 name">已选</view>
        <view class="name3 name">保障</view>
        <view class="name4 name">送至</view>
        <view class="background1"></view>
        <image src="https://pic.shanyide.cn/xiaochengxu43.png" class="fh_img"></image>
        <view class="fh_box">
            <view class="fh">{{productinfo.province}}</view>
            <view class="shu"></view>
            <view class="yf">快递:{{productinfo.postage}}</view>
        </view>
        <view class="month">月销:{{productinfo.salesAmount}}</view>
        <view class="wirp1"></view>
        <view class="text" bindtap="showDialogBtn3">默认</view>
        <image src="https://pic.shanyide.cn/xiaochengxu50.png" class="select1" bindtap="showDialogBtn3"></image>
        <view class="text1" bindtap="showDialogBtn2">品质优选·便捷物流·正品保障</view>
        <view class="text2">7天无理由退换</view>
       
        <view class="wirp2"></view>
        <view class="sz_box">
           
            <view class="sz" bindtap="showDialogBtn4">{{dzlist.province}}{{dzlist.detail}}</view>
            <image src="https://pic.shanyide.cn/xiaochengxu50.png" class="sz_img1"  bindtap="showDialogBtn4"></image>
        </view>
    </view>
    <view class="pro_det">
        <view class="det_title">商品详情</view>
        <image src="https://pic.shanyide.cn/xiaochengxu60.png" class="det_img"></image>
       
        <block wx:for='{{swiperimg[2].pictureList}}' wx:key='index'>
            <image src="{{item.url}}" class="det_img2"></image>
        </block>
        
    </view>
    <view class="footer">
        <view class="ico_list mr30" bindtap="showDialogBtn">
            <view class="kefu_img">
                <image src="https://pic.shanyide.cn/xiaochengxu40.png"></image>
            </view>
            <view class="kefu">客服</view>
        </view>
        <view class="ico_list" bindtap="collect3" data-id="{{productid}}">
            <view class="kefu_img" bindtap="tab">
                <image src="https://pic.shanyide.cn/xiaochengxu39.png" wx:if="{{!tab}}"></image>
                <image src="/images/shop/xiaochengxu62.png" wx:if="{{tab}}"></image>
            </view>
            <view class="kefu">收藏</view>
        </view>
        <view class="ico_list" bindtap="shopcar">
            <view class="kefu_img">
                <image src="https://pic.shanyide.cn/xiaochengxu38.png"></image>
            </view>
            <view class="kefu">购物车</view>
        </view>
        <view class="footer_btn">
            <view class="by_car" bindtap="showDialogBtn3">加入购物车</view>
            <view class="now_by" bindtap="now_buy" data-msg="{{msg}}" data-size="{{size}}">立即购买</view>
        </view>
    </view>
</view>


