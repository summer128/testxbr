    <view class="modal-mask1" bindtap="hideModal1" catchtouchmove="preventTouchMove" wx:if="{{showModal1}}"></view>
<view class="box1" wx:if="{{showModal1}}">
    <view class="shar_title">
        <image src="../../images/index/icon@2x.png" class="ico1"></image>
        <view class="shar_name">分享</view>
        <image src="../../images/index/icon-@2x.png" class="ico2"></image>
    </view>
    <view class="ico_box">
        <view class="ico_footer f1">
            <image src="../../images/product/button-Wechat@2x.png"></image>
            <view class="ico_footer_name">微信好友</view>
        </view>
        <view class="ico_footer f2">
            <image src="../../images/product/button-CircleofFriends@2x.png"></image>
            <view class="ico_footer_name">朋友圈</view>
        </view>
         <view class="ico_footer f3">
            <image src="../../images/product/button-microblog@2x.png"></image>
            <view class="ico_footer_name">微博</view>
        </view>
         <view class="ico_footer f4">
            <image src="../../images/product/button-QQ@2x.png"></image>
